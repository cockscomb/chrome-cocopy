{
  "extends": [
    "./node_modules/gts/",
    "plugin:react/recommended"
  ],
  "plugins": [
    "node",
    "react",
    "prettier"
  ],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "jest": true
  },
  "globals": {
    "chrome": true
  },
  "rules": {
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "@typescript-eslint/no-explicit-any": "off",
    "react/display-name": "off"
  },
  "overrides": [
    {
      "files": ["webpack.config.js"],
      "rules": {
        "node/no-unpublished-require": "off"
      }
    }
  ]
}
