{
  "manifest_version": 2,
  "name": "cocopy",
  "version": "<from package.json>",
  "version_name": "<from git tag & revision>",

  "description": "a chrome extension to copy link by your function code.",
  "icons": {
    "16": "img/icon/16.png",
    "48": "img/icon/48.png",
    "128": "img/icon/128.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "img/icon/32.png",
    "default_title": "COOCPY",
    "default_popup": "popup.html"
  },

  "options_page": "options.html",

  "permissions": [
    "tabs",
    "storage",
    "clipboardWrite",
    "contextMenus",
    "http://*/*",
    "https://*/*"
  ]
}
